# PhoneInfo Configuration
# Copy this file to .env and fill in your values

# ===================
# Required Settings
# ===================

# ME API Configuration
ME_API_URL=https://app.mobile.me.app/business-api/search
ME_API_SID=your_sid_here
ME_API_TOKEN=your_token_here

# SYNC API Configuration (optional)
# SYNC_API_URL=https://callerid.powerlead.com/api/third/search
# SYNC_API_TOKEN=your_sync_token_here

# ===================
# Server
# ===================

DATABASE=db/db.db
HOST=0.0.0.0
PORT=5001
DEBUG=true

# ===================
# Cloudflare Tunnel
# ===================

# CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token_here

# ===================
# File Upload
# ===================

MAX_FILE_SIZE_MB=50
MAX_ROWS=100000

# ===================
# File Cleanup
# ===================

FILE_EXPIRY_MINUTES=5
CLEANUP_INTERVAL_SECONDS=60

# ===================
# Rate Limiting
# ===================

RATE_LIMIT_DAY=200 per day
RATE_LIMIT_HOUR=50 per hour

# ===================
# Logging
# ===================

LOG_DIR=logs
LOG_MAX_BYTES=104857600
LOG_BACKUP_COUNT=5

# ===================
# Gunicorn
# ===================

GUNICORN_WORKERS=1
GUNICORN_THREADS=8
GUNICORN_TIMEOUT=120
GUNICORN_GRACEFUL_TIMEOUT=30
GUNICORN_KEEPALIVE=5
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=50
GUNICORN_LOGLEVEL=info
GUNICORN_BACKLOG=64
GUNICORN_WORKER_CLASS=sync
GUNICORN_WORKER_CONNECTIONS=1000
GUNICORN_LIMIT_REQUEST_LINE=4096
GUNICORN_LIMIT_REQUEST_FIELDS=100
GUNICORN_LIMIT_REQUEST_FIELD_SIZE=8190
